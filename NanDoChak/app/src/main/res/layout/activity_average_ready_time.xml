<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="kr.co.west_gang.nan_do_chak.view.averagereadytime.AverageReadyTimeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.averagereadytime.AverageReadyTimeActivity">

        <TextView
            android:id="@+id/averageReadyTimeTitle"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.userNickname}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/averageReadyTimePickerBackground"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/number_picker_background_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/averageReadyTimeHoursPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NumberPicker"
            android:value="@={viewModel.averageReadyTimeHours}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/averageReadyTimeMinutesPicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/averageReadyTimeHoursText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/hours"
            android:textColor="@color/number_picker_text_color_black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/averageReadyTimePickerBackground"
            app:layout_constraintEnd_toEndOf="@id/averageReadyTimeHoursPicker" />

        <NumberPicker
            android:id="@+id/averageReadyTimeMinutesPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NumberPicker"
            android:value="@={viewModel.averageReadyTimeMinutes}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/averageReadyTimeHoursPicker"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/averageReadyTimeMinutesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/minutes"
            android:textColor="@color/number_picker_text_color_black"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@id/averageReadyTimePickerBackground"
            app:layout_constraintEnd_toEndOf="@id/averageReadyTimeMinutesPicker" />

        <Button
            android:id="@+id/averageReadyTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ui_background_bottom_button_brown_round_24"
            android:onClick="@{()->viewModel.onButtonClick()}"
            android:outlineProvider="none"
            android:text="@string/common_choice"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>